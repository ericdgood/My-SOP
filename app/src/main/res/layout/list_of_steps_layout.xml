<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/constrain_layout_list_step"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="6dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_step_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="This is a sample of a step title"
        style="@style/ConstraintCenterVertical"
        android:layout_marginStart="8dp"
        android:textSize="21sp"
        android:padding="8dp"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/imageView_step_list_attachment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_action_attachment_2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/page_attachments"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>