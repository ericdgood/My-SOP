<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:background="@drawable/elevation"
    android:id="@+id/constrantlayout_category">

    <ImageView
        android:id="@+id/imageview_category"
        style="@style/ConstraintCenterHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:contentDescription="@string/shelf_image"
        android:src="@drawable/bookshelfedit" />

    <TextView
        android:id="@+id/textview_category_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        tools:text="Work"
        android:paddingBottom="12dp"
        android:textStyle="bold"
        android:textSize="20sp"
        style="@style/ConstraintCenterHorizontal"
        app:layout_constraintTop_toBottomOf="@id/imageview_category"
        app:layout_constraintWidth_percent=".90"/>

    <ImageView
        android:id="@+id/imageview_cat_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:contentDescription="@string/shelf_options"
        android:paddingTop="4dp"
        android:src="@drawable/ic_action_overflow"
        android:paddingStart="12dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/imageview_cat_collab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:contentDescription="@string/shelf_share"
        android:src="@drawable/collab"
        android:visibility="gone"/>


</android.support.constraint.ConstraintLayout>