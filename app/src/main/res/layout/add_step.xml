<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp">

    <TextView
        android:id="@+id/textview_new_sop_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a new SOP"
        android:textSize="21sp"
        style="@style/ConstraintCenterHorizontal"/>

    <TextView
        android:id="@+id/textview_add_sop_step_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="step 1"
        android:textSize="18sp"
        style="@style/ConstraintCenterHorizontal"
        app:layout_constraintTop_toBottomOf="@id/textview_new_sop_label"/>

    <EditText
        android:id="@+id/edittext_add_sop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="SOP Title"
        app:layout_constraintTop_toBottomOf="@id/textview_add_sop_step_count"/>


    <Button
        android:id="@+id/button_add_sop_another_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add another step"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_add_sop_save"
        app:layout_constraintTop_toTopOf="@id/button_add_sop_save" />

    <Button
        android:id="@+id/button_add_sop_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete SOP"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/button_add_sop_another_step"
        app:layout_constraintTop_toBottomOf="@id/edittext_add_sop_title" />

</android.support.constraint.ConstraintLayout>