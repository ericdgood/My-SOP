<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Steps.StepActivity"
    android:layout_margin="8dp">

    <!--THINGS I WANT TO SHOW (STEP TITLE, PICTURE, DESCRIPTION, STEP NUMBER-->

    <TextView
        android:id="@+id/textview_step_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="This is a sample of step title"
        style="@style/ConstraintCenterHorizontal"
        android:textSize="21sp"
        android:padding="8dp"/>

    <ImageView
        android:id="@+id/imageview_step_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:src="@drawable/mysop_logo"
        app:layout_constraintTop_toBottomOf="@id/textview_step_title"
        android:contentDescription="picture" />

    <TextView
        android:id="@+id/textview_step_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="hjedjfweckjwlenclkfwn"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/imageview_step_picture"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_step_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_action_edit"/>

</android.support.constraint.ConstraintLayout>